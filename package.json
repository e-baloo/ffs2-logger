{
  "name": "@ffs2/logger",
  "version": "0.8.0-alpha2",
  "description": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:depcheck": "depcheck --quiet",
    "test:coverage": "vitest run --coverage",
    "test:outdated": "pnpm outdated",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "quality": "pnpm lint && pnpm format:check && pnpm build:noemit",
    "clean": "rm -rf ./lib ./dist",
    "build:noemit": "tsc --noemit",
    "build:lib": "pnpm build:vite",
    "watch:vite": "vite build --watch",
    "build:vite": "vite build",
    "build": "pnpm build:lib",
    "commit:emergency": "git commit --no-verify",
    "postinstall": "simple-git-hooks"
  },
  "keywords": [
    "ffs2",
    "logger"
  ],
  "author": "Marc DONVAL",
  "license": "ISC",
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm quality",
    "pre-push": "pnpm test:run",
    "commit-msg": "npx commitlint --edit $1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@swc/core": "^1.15.2",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^2.1.8",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "5.0.0-beta.6",
    "vitest": "^2.1.8"
  }
}
