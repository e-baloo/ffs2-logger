{
  "name": "@ffs2/logger",
  "version": "0.8.0-alpha2",
  "description": "",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "test": "pnpm test:jest",
    "test:jest": "jest --config ./jest.config.mjs",
    "test:depcheck": "depcheck --quiet",
    "test:coverage": "jest --coverage",
    "test:outdated": "pnpm outdated",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "quality": "pnpm lint && pnpm format:check && pnpm build:noemit",
    "clean": "rm -rf ./lib ./dist",
    "build:noemit": "tsc --noemit",
    "build:lib": "pnpm clean && pnpm build:tsup",
    "watch:tsup": "tsup ./src/index.ts --watch",
    "build:tsup": "tsup ./src/index.ts",
    "build": "pnpm build:lib"
  },
  "keywords": [
    "ffs2",
    "logger"
  ],
  "author": "Marc DONVAL",
  "license": "ISC",
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@jest/globals": "^30.2.0",
    "@swc/core": "^1.15.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
